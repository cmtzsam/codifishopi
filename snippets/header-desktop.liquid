<div class="header-middle d-none d-lg-block">
    <div class="container">
        <div class="header-wrap">
            <div class="logo d-flex w-100">
                <a href="/" class="d-flex w-100">
                  <img src="https://cdn.shopify.com/s/files/1/0763/2545/4045/files/Recurso_322.png?v=1750710221" alt="logo" width="280" height="45" style="width: auto; height: auto; max-width: 280px" />
                </a>
            </div>

            <div class="header-search-bar-desk w-100 d-flex justify-content-center">
                {% unless template == 'search' %}
                    {% render 'search-bar-desktop', block: block %}
                {% endunless %}
            </div>

            <div class="header-right d-flex justify-content-end">
                <div class="header-action-right">
                  {% render 'navbar-desktop-icons', block: block %}
                </div>
            </div>
        </div>
    </div>
</div>