<div class="header-top d-none d-lg-block">
  <div class="container w-100" style="overflow-x: hidden;">
      <div class="d-flex">
          <div class="w-100 mw-50">
              <div class="header-info">
                  <ul>
                      <li><a href="/blogs/noticias">Blog</a></li>
                      <li><a href="/pages/contact">Contacto</a></li>
                      {% comment %} <li><a href="/pages/faqs">Preguntas Frecuentes</a></li> {% endcomment %}
                      <li><a href="/pages/facturacion">Facturación</a></li>
                  </ul>
              </div>
          </div>
          <div class="w-100 mw-50">
              <div class="header-info header-info-right">
                  <ul>
                      <li> 
                        <a href="#!" class="text-brand d-flex align-items-center">
                            <img src="{{ 'whatsapp-icon.svg' | asset_url }}" alt="WhatsApp" style="width: 20px; height: 20px; vertical-align: middle; display: block; margin-right: 5px;" width="20" height="20" />
