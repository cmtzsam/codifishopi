                <div class="col-12 col-lg-3">
                    <div class="widget-about font-md mb-md-3 mb-lg-3 mb-xl-0">
                        <div class="logo pt-4">
                            <a 
                            class="mb-15" 
                            href="{{ routes.root_url }}">
                            <img src="https://cdn.shopify.com/s/files/1/0763/2545/4045/files/Recurso_4222.png?v=1750710221" alt="logo" width="200" height="45" style="width: auto; height: auto; max-width: 200px" />
                            </a>
                            {% comment %} <p class="font-lg text-heading">Awesome grocery store website template</p> {% endcomment %}
                        </div>
                    </div>
                </div>
                {% for block in section.blocks %}
                <div class="footer-link-widget col" role="listitem" {{ block.shopify_attributes }}>
                    <h4 class="widget-title {{ block.settings.title_font_size }}">
                    <span>
                        {{ block.settings.title }}
                    </span>
                    </h4>
                    {% render 'footer-block', block: block %}
                </div>
                {% endfor %}
                {% if section.settings.show_payment_icons %}
                    <div class="footer-link-widget col-12 col-lg-2 paymentstxt">
                        <h4 class="widget-title fs-xl" style="white-space: nowrap;">
                          Payment Methods
                        </h4>
                        <img class="wow fadeIn animated" src="https://cdn.shopify.com/s/files/1/0763/2545/4045/files/payment-method.png?v=1750716789" alt="Secured Payment Gateways" width="224" height="32" />
