            <div class="col-xl-4 col-lg-6 col-md-6">
                <p class="font-sm mb-0">
                    &copy; {{ 'now' | date: "%Y" }} {{ shop.name | replace: ' (', '<span hidden>' | replace: ')', '</span>' }}.
                </p>
            </div>
